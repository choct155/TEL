\begin_inset CommandInset label
LatexCommand label
name "tab:Subgroups-for-Track-1a"

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset VSpace 10bp
\end_inset


\end_layout

\begin_layout Plain Layout
\align center
